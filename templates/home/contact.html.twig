{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Contact{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 id="title-underlined">{% trans %}Contact{% endtrans %}</h1>
                <div class="row justify-content-center">

                    <div class="col-lg-5 col-md-2">

                        <div class="info">
                            <div>
                                <i class="fa fa-map-marker"></i>
                                <p>242 Rue du Faubourg Saint Antoine<br>Paris, 75012</p>
                            </div>

                            <div>
                                <i class="fa fa-envelope"></i>
                                <p>contact@ffw-pmv.com</p>
                            </div>

                            <div>
                                <i class="fa fa-phone"></i>
                                <p>00 11 22 33 44</p>
                            </div>
                        </div>

                        <div class="social-links">
                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
                            <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-7 col-md-6">
                        <div class="form">
                            <form action="" method="post" role="form" class="contactForm">
                                <div class="form-group">
                                    <input type="text" name="name" class="form-control" placeholder="{% trans %}Votre nom{% endtrans %}"/>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="{% trans %}Votre e-mail{% endtrans %}"/>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="subject" placeholder="{% trans %}Sujet{% endtrans %}"/>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="message" rows="5" placeholder="{% trans %}Message{% endtrans %}"></textarea>
                                </div>
                                <div class="text-center"><button type="submit" class="btn btn-custom">{% trans %}Envoyer{% endtrans %}</button></div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}