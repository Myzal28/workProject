<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}FFW{% endblock %}</title>
    <meta name="viewport"
        content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
    <!--
    =========================================================
    * ArchitectUI HTML Theme Dashboard - v1.0.0
    =========================================================
    * Product Page: https://dashboardpack.com
    * Copyright 2019 DashboardPack (https://dashboardpack.com)
    * Licensed under MIT (https://github.com/DashboardPack/architectui-html-theme-free/blob/master/LICENSE)
    =========================================================
    * The above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software.
    -->
    <link href="{{ asset('img/favicon.png') }}" rel="icon">
    <link href="{{ asset('lib/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet">
</head>

<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <a href="{{ path('home') }}"><img style="height: 20px;" src="{{ asset('img/logo_noir.png') }}"
                        alt="Logo fight food waste" /></a>

            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button"
                        class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">

                        <li {% if app.request.server.get('REQUEST_URI') == path('home') %}
                            class="menu-active {% endif  %}nav-item"><a class="nav-link"
                                href="{{ path('home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                        <li {% if app.request.server.get('REQUEST_URI') == path("admin_manage") %}
                            class="menu-active {% endif  %}nav-item"><a class="nav-link"
                                href="{{path("admin_manage")}}">{% trans %}Gestion{% endtrans %}</a></li>

                    </ul>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                            class="p-0 btn">
                                            <img width="42" class="rounded-circle"
                                                src="{{ asset('/img/flags/' ~ app.request.locale ~ '.png') }}" alt="">
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true"
                                            class="dropdown-menu dropdown-menu-right">
                                            {% if app.request.locale != 'fr' %}
                                            <button type="button" tabindex="0" class="dropdown-item"><a class="nav-link"
                                                    href="{{ path('home',{'_locale' : 'fr'}) }}"><img
                                                        src="{{ asset('/img/flags/fr.png') }}" height="32px"
                                                        alt="french flag">Français</a></button>
                                            {% endif %}
                                            {% if app.request.locale != 'pt' %}
                                            <button type="button" tabindex="0" class="dropdown-item"><a class="nav-link"
                                                    href="{{ path('home',{'_locale' : 'pt'}) }}"><img
                                                        src="{{ asset('/img/flags/pt.png') }}" height="32px"
                                                        alt="portuguese flag">Português</a></button>

                                            {% endif %}
                                            {% if app.request.locale != 'it' %}
                                            <button type="button" tabindex="0" class="dropdown-item"><a class="nav-link"
                                                    href="{{ path('home',{'_locale' : 'it'}) }}"><img
                                                        src="{{ asset('/img/flags/it.png') }}" height="32px"
                                                        alt="italian flag">Italiano</a></button>

                                            {% endif %}
                                            {% if app.request.locale != 'en' %}
                                            <button type="button" tabindex="0" class="dropdown-item"><a class="nav-link"
                                                    href="{{ path('home',{'_locale' : 'en'}) }}"><img
                                                        src="{{ asset('/img/flags/en.png') }}" height="32px"
                                                        alt="uk flag">English</a></button>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        <a href="{{path("view_profile_admin", {'id' : app.user.id})}}">{{app.user.firstname}}
                                            {{app.user.lastname}}</a>
                                    </div>
                                    <div class="widget-subheading">
                                        {% trans %}Administrateur du site{% endtrans %}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                                data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button"
                            class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">{% trans %}Tableau de bord{% endtrans %}</li>
                            <li>
                                <a href="index.html" class="mm-active">
                                       {% trans %}Tableau de bord principal{% endtrans %}
                                </a>
                            </li>

                    </div>
                    {% block sideBar %}
                    {% endblock %}
                </div>

            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    {% block mainPane %}
                    {% endblock %}
                    <div class="app-wrapper-footer">
                        <div class="app-footer">
                            <div class="app-footer__inner">
                                {% block painFooter %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
                <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
            </div>
        </div>
        <script type="text/javascript" src="{{ asset('js/admin.js') }}"></script>
</body>

</html>