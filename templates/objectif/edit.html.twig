{% extends 'objectif/base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
{% form_theme delete_form 'bootstrap_4_horizontal_layout.html.twig' %}
{% block title %}
    {{ parent() }} Editer l'objectif {{ id }}
{% endblock %}
{% block body %}
    <h1>Modification de l'objectif {{ id }}</h1>
    {% for message in app.session.flashBag.get('erreur') %}
        <div class="alert alert-primary" role="alert">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    <hr>
    <div class="col-12 col-xl-8 mb-3 mb-lg-4 alert alert-secondary" role="alert">
        <div class="row">
            <div class="col-9"> <strong>{{ objectif.veterinaire.nom|upper }}</strong> </div>
        </div>
        <div class="row">
            <div class="col-9"> {{ objectif.veterinaire.adresse }} </div>
        </div>
        <div class="row">
            <div class="col-9"> {{ objectif.veterinaire.codePostal }} - {{ objectif.veterinaire.ville }} </div>
        </div>
    </div>
    {{ form_start(form,{'attr':{'class':'col-12 col-xl-8'} }) }}
    {{ form_widget(form) }}
    <p class="mt-3 padding-tb-10">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-plus"></i> Enregistrer
        </button>
    </p>
    {{ form_end(form) }}

    <ul class="list-unstyled mt-5">
        <li>
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-link btn-link pl-0">
                <i class="fa fa-trash"></i> Supprimer
            </button>
            {{ form_end(delete_form) }}
        </li>

        <li>
            <a href="{{ path('veterinaire_liste') }}">
                <i class="fa fa-angle-left"></i> Retour Ã  la liste
            </a>
        </li>
    </ul>
{% endblock %}