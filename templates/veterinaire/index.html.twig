{% extends 'veterinaire/base.html.twig' %}

{% block title %} {{ parent() }} Liste des vétérinaires{% endblock %}

{% block body %}
    <h1>Liste des vétérinaires</h1>
    {% for message in app.session.flashBag.get('erreur') %}
        <div class="alert alert-danger" role="alert">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    {% for message in app.session.flashBag.get('alerte') %}
        <div class="alert alert-warning" role="alert">
            <p>{{ message }}</p>
        </div>
    {% endfor %}


    <p class="text-center padding-tb-10">
        <a href="{{  path('veterinaire_new') }}" class="btn btn-primary">
            <i class="fa fa-edit"></i> Créer un nouveau véto
        </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CP</th>
                <th>Ville</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for veto in lesVetos %}
                <tr>
                    <td>
                        <a href="{{ path('veterinaire_show',{'id' : veto.id}) }}">{{ veto.id }}</a>
                    </td>
                    <td>{{ veto.nom }}</td>
                    <td>{{ veto.adresse }}</td>
                    <td>{{ veto.codePostal }}</td>
                    <td>{{ veto.ville }}</td>
                    <td>
                        <ul>
                            <li><a href="{{ path('veterinaire_show',{'id' : veto.id}) }}">Voir</a></li>
                            <li><a href="{{ path('veterinaire_edit',{'id' : veto.id}) }}">Éditer</a></li>
                            <li><a href="{{ path('objectif_show',{'id' : veto.id}) }}">Gérer les objectifs</a></li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun vétérinaire !</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
