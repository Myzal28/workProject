{% extends 'base.admin.html.twig' %}

{% block manageVehicules %}class="mm-active"{% endblock %}

{% block mainPane %}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            
            <div>{% trans %}Services{% endtrans %}
                <div class="page-title-subheading">{% trans %}Voici tout les services existants{% endtrans %}
                </div>
            </div>
        </div>
        
    </div>
</div>
<div class="row">
    <div class="col-lg">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="mb-0 table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{% trans %}Personnes attribué:{% endtrans %}</th>
                            <th>{% trans %}Status{% endtrans %}</th>
                            <th>{% trans %}Modèle{% endtrans %}</th>
                            <th>{% trans %}Marque{% endtrans %}</th>
                            <th>{% trans %}Kilomètrage{% endtrans %}</th>
                            <th>{% trans %}Date d'enregistrement{% endtrans %}</th>
                            <th>{% trans %}Date du dernier checkup{% endtrans %}</th>
                            <th>{% trans %}Valider{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vehicule in vehicules %}
                        <tr>
                            <th scope="row">{{vehicule.id}}</th>
                            <td>{% if vehicule.person.email is not defined %}<input type="text" placeholder="{% trans %}Entrer email{% endtrans %}">{% else %}{{vehicule.person.email}}{% endif %}</td>
                            <td>
                                <select class="form-control-sm form-control">
                                    {% for statu in status %}
                                        <option {% if vehicule.status.id == statu.id %} selected="selected" {% endif %}>{{ statu.status }}</option>
                                    {% endfor %}
                                </select>
                            </td>
                            <td>{{vehicule.model}}</td>
                            <td>{{vehicule.brand}}</td>
                            <td>{{vehicule.mileage}} Km</td>
                            <td>{{vehicule.dateRegister  | date('d/m/Y  H:i')}}</td>
                            <td>{% if vehicule.dateLastCheck == null %}{% trans %}Pas de vérifications{% endtrans %}{% else %}{{vehicule.dateLastheck  | date('d/m/Y  H:i')}}{% endif %}</td>
                            <td><button class="mb-2 mr-2 btn-transition btn btn-outline-success">{% trans %}Valider{% endtrans %}</button></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                                <table>
                                        <thead class="thead-light">
                                            <tr>
                                                    <th>{% trans %}Modèle{% endtrans %}</th>
                                                    <th>{% trans %}Marque{% endtrans %}</th>
                                                    <th>{% trans %}Kilomètrage{% endtrans %}</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table">
                                            <tr>
                                                <form action="/post/vehicule/new/">
                                                    <td scope="row"><input type="text" name="model" placeholder="{% trans %}Modèle{% endtrans %}"></td>
                                                    <td><input type="text" name="brand" placeholder="{% trans %}Marque{% endtrans %}"></td>
                                                    <td><input type="text" name="mileage" placeholder="{% trans %}Kilométrage{% endtrans %}"></td>
                                                </td>
                                                <td>
                                                    <button class="btn btn-success" type="submit">{% trans %}Valider{% endtrans %}</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </form>
                                </tr>
                            </tbody>
                        </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

{% endblock %}
{% block painFooter %}
<button type="button" class="btn mr-2 mb-2 btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">{% trans %}Ajouter véhicule{% endtrans %}</button>
{% endblock %}